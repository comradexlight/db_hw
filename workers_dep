CREATE DATABASE workers_db;
ALTER DATABASE workers_db OWNER TO postgres;

CREATE TABLE IF NOT EXISTS workers (
id serial primary key,
name varchar(100) not null
);

CREATE TABLE IF NOT EXISTS departments (
id serial primary key,
dep_name varchar(100) not null,
head_id integer references workers(id)
);

ALTER TABLE workers ADD COLUMN dep_id integer references departments(id);

CREATE TABLE IF NOT EXISTS head (
id_head integer references workers(id),
id_workers integer references workers(id)
);